@model Addingimages.Models.Seller

@{
    ViewData["Title"] = "Details";
      var photoPath = "~/images/" + (Model.photopath ?? "v.jpg");
}

<h1>Details</h1>

<h4>Seller</h4>
<hr />
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Employee ID : @Model.Id</h4>
                <h4>Email : @Model.Email</h4>
                <h4>Name : @Model.Name</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="Seller" asp-action="DisplayItem" class="btn btn-primary">Display</a>
                <a  asp-controller="Seller" asp-action="AddItem" class="btn btn-primary">AddItem</a>
                
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
